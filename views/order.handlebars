 <div class="plate">
  <p class="script"><span>Enjoy</span></p>
  <p class="shadow text1">Some</p>
  <p class="shadow text2">Beef</p>
  <p class="shadow text3">Jerky</p>
  <p class="script"><span>by Chase</span></p>
</div>


<ul class="materials">
  {{#each jerky}}
    {{#unless added}}
      {{> jerky/add-jerky added=true}}
    {{/unless}}
  {{/each}}
</ul>

{{!-- <p>Jerky ingredients for later!</p> --}}

<ul class= "nav">
  {{#each jerky}}
    {{#if added}}
      {{> jerky/add-jerky added=false}}
    {{/if}}
  {{/each}}
</ul>
<p>Add some Jerky</p>

<form class="create-form">

  <div class="form-group">
    <label for="ca">Flavor Name:</label>
    <input type="text" id="ca" name="flavor">
    <input type="radio" name="added" value="0" checked> Add to Order
    <input type="radio" name="added" value="1"> Added!<br>
  <button type="submit">Add jerky</button>
  </div>
 
</form>


