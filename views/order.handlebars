<h1>Jerky</h1>

<h2>Jerky to Eat!</h2>

<ul>
  {{#each jerky}}
    {{#unless purchased}}
      {{> jerky/add-jerky added=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Jerky for later!</h2>

<ul>
  {{#each jerky}}
    {{#if purchased}}
      {{> jerky/add-jerky added=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add some Jerky</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Flavor Name:</label>
    <input type="text" id="ca" name="flavor">
  </div>

  <div class="form-group">
    <label for="added">Hungry?</label><br>
    <input type="radio" name="added" value="1" checked> Added!<br>
    <input type="radio" name="added" value="0"> Awake
  </div>

  <button type="submit">Add jerky</button>
</form>

